{% extends 'base.html.twig' %}

{% block title %}Nos Services - Créa'Tech{% endblock %}

{% block body %}
    <div class="bg-base-200 min-h-screen py-12">
        <div class="container mx-auto px-4 max-w-7xl">
            
            {# En-tête de la page #}
            <div class="text-center mb-16">
                <h1 class="text-4xl md:text-5xl font-bold mb-6">Nos Solutions Digitales</h1>
                <p class="text-xl text-base-content/70 max-w-2xl mx-auto">
                    Découvrez l'ensemble de nos expertises pour propulser votre activité.
                </p>
            </div>

            {# Grille des services #}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                
                {% for prestation in prestations %}
                    <div class="card bg-base-100 shadow-xl hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 border border-base-300 overflow-hidden group">
                        
                        {# Image #}
                        {% if prestation.image %}
                            <figure class="h-56 w-full bg-base-300 relative overflow-hidden">
                                {% if 'http' in prestation.image %}
                                    <img src="{{ prestation.image }}" alt="{{ prestation.titre }}" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
                                {% else %}
                                    <img src="{{ asset('uploads/prestations/' ~ prestation.image) }}" alt="{{ prestation.titre }}" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
                                {% endif %}
                                <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors"></div>
                            </figure>
                        {% endif %}

                        <div class="card-body">
                            <h2 class="card-title text-2xl text-primary mb-2">
                                {{ prestation.titre }}
                            </h2>
                            <p class="mb-6 text-base-content/70 line-clamp-3">
                                {{ prestation.descriptionCourte }}
                            </p>
                            
                            <div class="card-actions justify-end mt-auto pt-4 border-t border-base-200">
                                <a href="{{ path('app_prestation_show', {slug: prestation.slug}) }}" class="btn btn-primary btn-outline gap-2 group-hover:btn-active">
                                    En savoir plus
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
                                </a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-span-full text-center py-10">
                        <div class="text-3xl opacity-50">Aucun service pour le moment.</div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}